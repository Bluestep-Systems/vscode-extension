{
  "name": "bsjs-push-pull",
  "displayName": "bsjs-push-pull",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bsjs-push-pull.pushScript",
        "title": "B6P: Push Script"
      },
      {
        "command": "bsjs-push-pull.pushCurrent",
        "title": "B6P: Push Current Script"
      },
      {
        "command": "bsjs-push-pull.pullScript",
        "title": "B6P: Pull New Script"
      },
      {
        "command": "bsjs-push-pull.pullCurrent",
        "title": "B6P: Pull Current Script"
      },
      {
        "command": "bsjs-push-pull.updateCredentials",
        "title": "B6P: Update Credentials"
      },
      {
        "command": "bsjs-push-pull.report",
        "title": "B6P: Report State"
      },
      {
        "command": "bsjs-push-pull.clear",
        "title": "B6P: Clear State"
      },
      {
        "command": "bsjs-push-pull.runTask",
        "title": "B6P: Run Task"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "myExtensionSidebar",
          "title": "B6P Quick Commands",
          "icon": "src/main/resources/bluestepLogo.svg"
        }
      ]
    },
    "views": {
      "myExtensionSidebar": [
        {
          "icon": "src/main/resources/bluestepLogo.svg",
          "id": "b6pMenuView",
          "name": "Menu"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "b6pMenuView",
        "contents": "--- QUICK ---"
      },
      {
        "view": "b6pMenuView",
        "contents": "[Pull Current](command:bsjs-push-pull.pullCurrent)"
      },
      {
        "view": "b6pMenuView",
        "contents": "[Push Current](command:bsjs-push-pull.pushCurrent)"
      },
      {
        "view": "b6pMenuView",
        "contents": "[Run Task](command:bsjs-push-pull.runTask)"
      },
      {
        "view": "b6pMenuView",
        "contents": "--- OTHER ---"
      },
      {
        "view": "b6pMenuView",
        "contents": "[Pull New](command:bsjs-push-pull.pullScript)"
      },
      {
        "view": "b6pMenuView",
        "contents": "[Push Script](command:bsjs-push-pull.pushScript)"
      },
      {
        "view": "b6pMenuView",
        "contents": "[Update Credentials](command:bsjs-push-pull.updateCredentials)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "fast-xml-parser": "^4.5.3"
  }
}